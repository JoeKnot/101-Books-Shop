@using Microsoft.AspNetCore.Session;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 25px;
        position: relative;
        overflow: hidden;
    }

    img {
        border-radius: 10px;
        box-shadow: 0px 0px 10px #888888;
    }

    .form-control {
        border-radius: 20px;
    }

    .input-group-text {
        background-color: #007bff;
        border: none;
        color: #fff;
        border-radius: 20px 0px 0px 20px;
    }

        .input-group-text i {
            color: #fff;
        }

    .btn-primary {
        border-radius: 20px;
        width: 100%;
    }

    /* CSS สำหรับกรอบล้อมรอบฟอร์ม */
    .login-form {
        border: 2px solid #007bff;
        border-radius: 20px;
        padding: 10px;
        box-shadow: 0px 0px 10px #888888;
    }

    /* CSS สำหรับภาพพื้นหลัง */
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/image/bgloginstaff.jpg'); /* เปลี่ยน URL ตามที่คุณต้องการ */
        background-size: cover;
        background-position: center;
        z-index: -1;
    }
</style>

<div class="container">
    <div class="background-image"></div>
    <!-- ทำการตรวจสอบว่ามีการส่ง ErrorMessage มาหรือไม่ ถ้ามีให้แสดง Alert -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">@TempData["ErrorMessage"]</div>
    }
    <div class="text-center">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 offset-lg-4 offset-lg-3 login-form">
                <img class="mt-5" src="/image/staff1.png" width="250" />
                <form asp-controller="Staff" asp-action="Login" method="POST">
                    <div class="input-group mt-3">
                        <span class="input-group-text">
                            <i class="bi bi-person-fill"></i>
                        </span>
                        <input type="text" name="userName" id="userName" class="form-control"
                               placeholder="Username" required autocomplete="off" />
                    </div>
                    <div class="input-group mt-2">
                        <span class="input-group-text">
                            <i class="bi bi-key-fill"></i>
                        </span>
                        <input type="password" name="userPass" id="userPass" class="form-control"
                               placeholder="Password" required autocomplete="off" />
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
