@model KuShop.Models.Product

@{
    ViewData["Title"] = "Edit";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage;
    </div>
}
<h1>Edit Product</h1>

<h4>Product Details</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <img src="@ViewBag.ImgFile" width="250" class="shadow" />
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PdId" />
                <div class="form-group">
                    <label asp-for="PdName" class="control-label"></label>
                    <input asp-for="PdName" class="form-control" />
                    <span asp-validation-for="PdName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label"></label>
                    <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.Category"></select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdPrice" class="control-label"></label>
                    <input asp-for="PdPrice" class="form-control" />
                    <span asp-validation-for="PdPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdCost" class="control-label"></label>
                    <input asp-for="PdCost" class="form-control" />
                    <span asp-validation-for="PdCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdStk" class="control-label"></label>
                    <input asp-for="PdStk" class="form-control" />
                    <span asp-validation-for="PdStk" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdDs" class="control-label"></label>
                    <input asp-for="PdDs" class="form-control" />
                    <span asp-validation-for="PdDs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
