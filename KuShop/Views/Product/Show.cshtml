@model KuShop.Models.Product


@{
    ViewData["Title"] = "Show";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<!--แสดงชื่อสินค้า-->
<h1 class="text-danger opacity-75">@Html.DisplayFor(model => model.PdName)</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <!--ชื่อรูปที่จะแสดงและตำแหน่งที่ได้มาจาก Controller-->
            <img src="@ViewBag.ImgFile" width="250" class="shadow" />
        </div>
        <div class="col-lg-8 col-md-6 col-sm-12">
            <!--ข้อมูล Product ที่สร้างจาก Template--->
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PdName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PdName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PdPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PdPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PdDs)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PdDs)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PdStk)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PdStk)
                </dd>
                <dd>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                        <!-- Add to Cart form -->
                        <form asp-controller="Cart" asp-action="AddDtl" method="post" class="d-inline">
                            <div class="row align-items-center">
                                <input type="hidden" name="pdid" value="@Model.PdId" />
                                <!-- Quantity input -->
                                <div class="col">
                                    <input id="quantity" name="quantity" value="1" type="number" class="form-control form-control-sm" />
                                </div>
                                <!-- Add to Cart button -->
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-cart-plus-fill lead"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>
                    
                </dd>

            </dl>

        </div>
    </div>
</div>


<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
